<h1><%= t("views.authors.title")%></h1>

<div class="my-5">
  <%= link_to t("views.new"), new_author_path, class: "btn btn-success" %>
</div>

<table class="table">
  <thead>
    <tr>
      <th><%= t("views.authors.name") %></th>
      <th><%= t("views.authors.bio")%></th>
      <th>Imagem</th> 
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= author.bio %></td>
        <td><%= author.image %></td>
        <td><%= link_to t("views.show"), author %></td>
        <td><%= link_to t("views.edit"), edit_author_path(author) %></td>
        <td><%= link_to t("views.destroy"), author, method: :delete, data: { confirm: t("views.are_you_sure") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

